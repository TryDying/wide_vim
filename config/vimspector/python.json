{
    "configurations": {
        "run - debugpy": {
            "adapter": "debugpy",
            "configuration": {
                "request": "launch",
                "type": "python",
                "cwd": "${workspaceRoot}",
                "args":[
                    "*${kwargs}"
                ],
                "python":"/usr/bin/python3",
                "program": "${file}",
                "stopOnEntry": true ,
                "console": "externalTerminal"
            },
            "breakpoints": {
                "exception": {
                    "raised": "N",
                    "uncaught": "",
                    "userUnhandled": ""
                }
            }
        }
    }
}
